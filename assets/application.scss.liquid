*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
  font-size: 62.5%;
}

.wrapper {
  border: 1px solid green;
}

header {
  background: yellow;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  text-align: center;
  border: 1px solid black;
  margin-bottom: 0;
  width: 100%;
  height: 100px;
}

footer {
  background: red;
}

.container {
  display: grid;
  grid-template-rows: 100px 600px 1fr;
}

.hero {
  border: 1px solid red;
}

.image-container{
  border: 1px solid black;
  height: 600px;
}

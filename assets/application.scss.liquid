*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
  font-size: 62.5%;
}

header {
  background: yellow;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

footer {
  background: red;
}

.container {
  display: grid;
}
